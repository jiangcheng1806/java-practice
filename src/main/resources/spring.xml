    <bean id="car1" class="com.jiangcheng.entity.Car" p:num="2" p:brand="宝马"></bean>-->


    <!--创建car对象-->
    <bean id="car" class="com.jiangcheng.entity.Car">
        <property name="num" value="1"></property>
        <property name="brand" value="宝马"></property>
    </bean>

    <!--导入外部的资源文件-->
    <context:property-placeholder location="classpath:jdbc.properties"></context:property-placeholder>

    <!--创建C3P0数据源-->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="user" value="${user}"></property>
        <property name="password" value="${pwd}"></property>
        <property name="driverClass" value="${driverName}"></property>
        <property name="jdbcUrl" value="${url}"></property>
    </bean>

    <!-- 配置静态工厂创建car对象 -->
    <!--<bean id="car2" class="com.jiangcheng.factory.StaticFactory" factory-method="getCar">
        <constructor-arg value="1"></constructor-arg>
    </bean>-->

    <!-- 配置实例工厂对象 -->
    <bean id="carFactory" class="com.jiangcheng.factory.InstanceCarFactory"></bean>

    <!-- 通过实例工厂对象创建car对象 -->
    <!--<bean id="car3" factory-bean="carFactory" factory-method="getCar">
        <constructor-arg value="2"></constructor-arg>
    </bean>-->

    <!--创建person对象-->
    <!--<bean id="person" class="com.jiangcheng.entity.Person" autowire="byName">-->
    <bean id="person" class="com.jiangcheng.entity.Person" autowire="byType">
        <property name="id" value="1"></property>
        <property name="name" value="张三"></property>
    </bean>

